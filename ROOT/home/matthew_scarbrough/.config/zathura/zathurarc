# ┣━━━━━━━━┻━━┱─┴──┬─┴──┬─┴──┬─┴──┬─┴──┬─┴──┬─┴──┬─┴──┬─┴──┬─┴──┲━┻━━━━━━━━━━┫ #
# ┃LFSH <S->  ┃AB01│AB02│AB03│AB04│AB05│AB06│AB07│AB08│AB09│AB10┃RTSH <S->   ┃ #
# ┃⇧          ┃Z   │X   │C   │V   │B   │N   │M   │, < │. > │/ ? ┃⇧           ┃ #
# ┣━━━━━━━┳━━━┻━┳━━┷━━┳━┷━━━━┷━━━━┷━━━━┷━━━━┷━━━━┷━━━┳┷━━━━╈━━━━┻┳━━━━━┳━━━━━┫ #
# ┃LCTL   ┃LWIN ┃LALT ┃SPCE                          ┃RALT ┃RWIN ┃MENU ┃RCTL ┃ #
