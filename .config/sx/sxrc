#!/bin/sh
#
# ===Monitor Fix===

	#xrandr --output DVI-D-0 --left-of HDMI-A-0 ;
	#xrandr --output DVI-D-1 --right-of HDMI-A-0 ;


# ===DWM STATUS BAR===

	while true; do
		xsetroot -name "[$( battery_check ) | $( date "+ðŸŒŽ%m-%d-%y | ðŸ•“%I:%M%p" )]"
		sleep 60
	done &


# ===DWM BACKGROUND===

	while true; do
		feh --bg-fill --randomize ~/Pictures/Wallpapers/*.jpg:*.png
		sleep 900							# Sleep 15min (900 sec's)
	done &


# ===WINDOW TRANSPARCENCY===

	xcompmgr &
	transset-df .98 &


# ===KEYBOARD===

	setxkbmap dvorak &


# ===DWM===

	exec dwm
